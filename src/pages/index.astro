<script>
  // Simple browser language detection to redirect to /en or /es
  const browserLang = navigator.language.split('-')[0];
  if (browserLang === 'es') {
    window.location.pathname = '/es';
  } else {
    window.location.pathname = '/en';
  }
</script>
<noscript>
  <meta http-equiv="refresh" content="0;url=/en" />
</noscript>
