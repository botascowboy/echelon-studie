---
const { lang = "en" } = Astro.props;

const studies = [
	{
		title: lang === 'en' ? "Advanced Hypertension Study" : "Estudio Avanzado de Hipertensión",
		type: "Phase III",
		specialty: lang === 'en' ? "Cardiology" : "Cardiología",
		eligibility: lang === 'en' ? "Adults 18-65" : "Adultos 18-65",
		location: "New York City, NY",
		compensation: "$500 - $1,200",
		status: "Recruiting"
	},
	{
		title: lang === 'en' ? "Type 2 Diabetes Research" : "Investigación sobre Diabetes Tipo 2",
		type: "Phase II",
		specialty: lang === 'en' ? "Endocrinology" : "Endocrinología",
		eligibility: lang === 'en' ? "Adults 18+" : "Adultos 18+",
		location: "Remote / Nationwide",
		compensation: "$1,000",
		status: "Recruiting"
	},
	{
		title: lang === 'en' ? "Dermatology Innovation" : "Innovación en Dermatología",
		type: "Phase IV",
		specialty: lang === 'en' ? "Dermatology" : "Dermatología",
		eligibility: lang === 'en' ? "Adults 21+" : "Adultos 21+",
		location: "Manhattan, NY",
		compensation: "$750",
		status: "Waitlist"
	}
];
---

<section id="trials" class="section-padding bg-slate-50/30">
	<div class="container mx-auto px-4">
		<div class="max-w-3xl mx-auto text-center mb-20 animate-fade-in">
      <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-accent/5 border border-accent/10 text-accent text-[10px] font-black uppercase tracking-[0.2em] mb-6">
        <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></span>
        {lang === 'en' ? 'Clinical Opportunities' : 'Oportunidades Clínicas'}
      </div>
			<h2 class="text-4xl md:text-7xl font-black mb-6 tracking-tighter text-primary">
				{lang === 'en' ? 'Open' : 'Ensayos'} <span class="text-gradient leading-tight">{lang === 'en' ? 'Studies.' : 'Abiertos.'}</span>
			</h2>
			<p class="text-slate-500 text-lg md:text-xl font-medium leading-relaxed max-w-2xl mx-auto">
				{lang === 'en' 
					? 'Access cutting-edge medical research and contribute to the future of healthcare in New York.' 
					: 'Acceda a investigaciones médicas de vanguardia y contribuya al futuro de la salud en Nueva York.'}
			</p>
		</div>

		<div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
			{studies.map(study => (
				<div class="group relative bg-white border border-slate-100 rounded-[3rem] p-10 hover:border-accent/60 transition-all duration-700 hover:shadow-[0_40px_80px_-20px_rgba(0,163,129,0.12)] flex flex-col justify-between overflow-hidden">
					<!-- Top Accent Line -->
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-accent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          
          <!-- Background Glow -->
					<div class="absolute -top-24 -right-24 w-60 h-60 bg-accent/[0.05] rounded-full blur-[100px] group-hover:bg-accent/[0.12] transition-all duration-700"></div>
          
					<div class="relative z-10">
            <div class="flex items-center justify-between mb-10">
              <span class={`text-[10px] font-black uppercase tracking-[0.2em] px-5 py-2.5 rounded-full shadow-sm border ${study.status === 'Recruiting' ? 'bg-accent text-white border-accent' : 'bg-slate-50 text-slate-400 border-slate-100'}`}>
                {study.status}
              </span>
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-accent/30"></span>
                <span class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-300">{study.type}</span>
              </div>
            </div>
            
            <div class="space-y-4 mb-10">
              <span class="text-accent text-[11px] font-black uppercase tracking-[0.4em] block">{study.specialty}</span>
              <h3 class="text-3xl font-black text-primary group-hover:text-accent transition-colors leading-[1.1] tracking-tighter">
                {study.title}
              </h3>
            </div>
            
            <div class="grid grid-cols-1 gap-5 mb-12">
              <div class="flex items-center gap-5 p-4 rounded-2xl bg-slate-50 border border-slate-100/50 group-hover:bg-white group-hover:border-accent/10 transition-all duration-500">
                <div class="w-12 h-12 rounded-xl bg-white flex items-center justify-center border border-slate-100 text-accent shadow-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle></svg>
                </div>
                <div>
                  <div class="text-[9px] font-black uppercase tracking-widest text-slate-300 mb-0.5">Eligibility</div>
                  <div class="text-sm font-bold text-slate-600">{study.eligibility}</div>
                </div>
              </div>
              
              <div class="flex items-center gap-5 p-4 rounded-2xl bg-slate-50 border border-slate-100/50 group-hover:bg-white group-hover:border-accent/10 transition-all duration-500">
                <div class="w-12 h-12 rounded-xl bg-white flex items-center justify-center border border-slate-100 text-accent shadow-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                </div>
                <div>
                  <div class="text-[9px] font-black uppercase tracking-widest text-slate-300 mb-0.5">Location</div>
                  <div class="text-sm font-bold text-slate-600">{study.location}</div>
                </div>
              </div>
            </div>
          </div>
					
					<a href="#contact" class="group/btn relative inline-flex items-center justify-center w-full py-6 rounded-2xl bg-accent text-white overflow-hidden transition-all duration-500 hover:bg-primary hover:shadow-[0_20px_40px_-10px_rgba(0,33,71,0.3)] active:scale-95 shadow-lg shadow-accent/20">
            <span class="relative z-10 font-black text-xs uppercase tracking-[0.3em]">{lang === 'en' ? 'Check Eligibility' : 'Verificar Elegibilidad'}</span>
					</a>
				</div>
			))}
		</div>

    <div class="mt-20 text-center">
      <a href="#" class="inline-flex items-center gap-4 text-primary font-black text-sm uppercase tracking-[0.3em] hover:text-accent transition-colors group">
        {lang === 'en' ? 'View all medical trials' : 'Ver todos los ensayos médicos'}
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-2 transition-transform"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </a>
    </div>
	</div>
</section>
