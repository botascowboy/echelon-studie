---
const { lang = "en" } = Astro.props;

const studies = [
	{
		title: lang === 'en' ? "Advanced Hypertension Study" : "Estudio Avanzado de Hipertensión",
		type: "Phase III",
		specialty: lang === 'en' ? "Cardiology" : "Cardiología",
		eligibility: lang === 'en' ? "Adults 18-65" : "Adultos 18-65",
		location: "New York City, NY",
		compensation: "$500 - $1,200",
		status: "Recruiting"
	},
	{
		title: lang === 'en' ? "Type 2 Diabetes Research" : "Investigación sobre Diabetes Tipo 2",
		type: "Phase II",
		specialty: lang === 'en' ? "Endocrinology" : "Endocrinología",
		eligibility: lang === 'en' ? "Adults 18+" : "Adultos 18+",
		location: "Remote / Nationwide",
		compensation: "$1,000",
		status: "Recruiting"
	},
	{
		title: lang === 'en' ? "Dermatology Innovation" : "Innovación en Dermatología",
		type: "Phase IV",
		specialty: lang === 'en' ? "Dermatology" : "Dermatología",
		eligibility: lang === 'en' ? "Adults 21+" : "Adultos 21+",
		location: "Manhattan, NY",
		compensation: "$750",
		status: "Waitlist"
	}
];
---

<section id="trials" class="section-padding bg-[#02040a]">
	<div class="container mx-auto px-4">
		<div class="flex flex-col md:flex-row justify-between items-end gap-8 mb-12">
			<div class="max-w-2xl text-center md:text-left">
				<h2 class="text-3xl md:text-5xl font-black mb-4 tracking-tighter text-white">
					{lang === 'en' ? 'Open' : 'Ensayos'} <span class="text-gradient leading-tight">{lang === 'en' ? 'Studies.' : 'Abiertos.'}</span>
				</h2>
				<p class="text-muted-foreground text-base font-medium leading-relaxed">
					{lang === 'en' 
						? 'Decades of scientific excellence applied to real-world medical breakthroughs.' 
						: 'Décadas de excelencia científica aplicada a avances médicos del mundo real.'}
				</p>
			</div>
			<a href="#" class="px-6 py-2.5 rounded-xl bg-white/5 border border-white/10 text-white font-bold text-xs uppercase tracking-widest hover:bg-white/10 transition-all flex items-center gap-2 active:scale-95 group">
				{lang === 'en' ? 'View all trials' : 'Ver todos los ensayos'}
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
			</a>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{studies.map(study => (
				<div class="group relative bg-[#0b1120] border border-white/[0.06] rounded-[2rem] p-8 hover:border-primary/50 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/10 overflow-hidden flex flex-col justify-between">
					<div class="absolute -top-24 -right-24 w-48 h-48 bg-primary/10 rounded-full blur-[80px] group-hover:bg-primary/20 transition-all duration-700"></div>
          
					<div>
            <div class="flex items-center justify-between mb-6">
              <span class={`text-xs font-black uppercase tracking-[0.2em] px-3 py-1.5 rounded-lg ${study.status === 'Recruiting' ? 'bg-primary/20 text-primary' : 'bg-amber-500/20 text-amber-500'}`}>
                {study.status}
              </span>
              <span class="text-[10px] font-black uppercase tracking-[0.2em] text-muted-foreground/40">{study.type}</span>
            </div>
            
            <span class="text-primary text-[11px] font-black uppercase tracking-[0.3em] mb-2 block">{study.specialty}</span>
            <h3 class="text-2xl font-black text-white group-hover:text-primary transition-colors leading-tight mb-6">{study.title}</h3>
            
            <div class="space-y-4 mb-8">
              <div class="flex items-center gap-3 text-sm font-medium text-muted-foreground">
                <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center border border-white/5 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle></svg>
                </div>
                {study.eligibility}
              </div>
              <div class="flex items-center gap-3 text-sm font-medium text-muted-foreground">
                <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center border border-white/5 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                </div>
                {study.location}
              </div>
            </div>
          </div>
					
					<a href="#contact" class="inline-flex items-center justify-center w-full py-4 rounded-xl bg-white/[0.03] border border-white/10 group-hover:bg-primary group-hover:border-primary group-hover:text-white transition-all font-black text-xs uppercase tracking-[0.2em] active:scale-95">
						{lang === 'en' ? 'Check Eligibility' : 'Verificar Elegibilidad'}
					</a>
				</div>
			))}
		</div>
	</div>
</section>
