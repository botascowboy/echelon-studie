---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	lang?: string;
}

const { title, description = "Echelon Studies - Clinical Trial Patient Recruitment in NYC and Nationwide", lang = "en" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;600;700;800&display=swap" rel="stylesheet">
		
		<style is:global>
			:root {
				--font-sans: 'Inter', sans-serif;
				--font-heading: 'Outfit', sans-serif;
			}
			
			h1, h2, h3, h4, h5, h6 {
				font-family: var(--font-heading);
			}
			
			body {
				font-family: var(--font-sans);
			}
		</style>
	</head>
	<body class="min-h-screen bg-background text-foreground selection:bg-primary/30 antialiased">
		<slot />
	</body>
</html>
